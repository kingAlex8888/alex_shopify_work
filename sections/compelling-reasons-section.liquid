<div class="compelling-reasons-section" style="background:{{ section.settings.footer_first_row_bg_color }};">
    <div class="container">
        {% for block in section.blocks %}
            <div class="{% if section.blocks.size == 2 %} col-lg-6 col-sm-6 col-xs-6 {% elsif section.blocks.size == 3 %} col-sm-4 col-lg-4 col-xs-4 {% elsif section.blocks.size == 4 %} col-lg-3 col-sm-3 col-xs-3 {% else %}col-lg-12 col-sm-12 col-xs-12 {% endif %} centr">
                {% if block.settings.link != blank %}
                    <a href="{{ block.settings.link }}">
                {% endif %}
                        <img src="{{ 'transparent.png' | asset_url }}"
                             data-src="{{ block.settings.image | img_url: 'master' }}"
                             data-widths="[540, 720, 900, 1080, 1296, 1512, 1728, 1944, 2048]"
                             data-aspectratio="{{ block.settings.image | img_url: 'master' }}"
                             data-sizes="auto"
                             data-parent-fit="contain"
                             alt="Image of footerr-image" class="lazyload footer-image no-border ratina-img"/>
                {% if block.settings.heading != blank%}
                            <h3 class="com-footer-text__title">{{ block.settings.heading }}</h3>
                        {% endif %}
                      {% if block.settings.link != blank %}
                    </a>
                {% endif %}
            </div>
        {% endfor %}
    </div>
</div>

<style>
 
   {% if section.settings.footer_first_row_font_size_heading != blank or section.settings.footer_first_row_font_style_heading != blank %}
            h3.com-footer-text__title{
            {% if section.settings.footer_first_row_font_size_heading != blank %}
                font-size: {{ section.settings.footer_first_row_font_size_heading }} !important;
            {% endif %}
            {% if section.settings.footer_first_row_font_style_heading != blank%}
                font-weight: {{ section.settings.footer_first_row_font_style_heading }} !important;
            {% endif %}
                color: {{ section.settings.footer_first_row_font_color }} !important;
            }
        {% endif %}
</style>

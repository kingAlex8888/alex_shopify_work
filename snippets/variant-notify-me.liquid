   {% if settings.variant_notify_me_form %}  
  <div class="notify_form notify-form-{{ product.id }}" id="notify-form-{{ product.id }}"  >
    <p class="message"></p>
    {% form 'contact' %}
      {% if form.posted_successfully? %}
        <p><em>{{ 'products.notify_form_variant.post_success' | t }}</em></p>
      {% elsif form.errors %}
        <p><em>{{ 'products.notify_form_variant.post_error' | t }}</em></p>
      {% else %}
        <p>
          <label for="contact[email]">{{settings.variant_notify_text}}</label>
          <br>
          {% if customer %}
            <input type="hidden" name="contact[email]" class="notify_email" value="{{ customer.email }}" />
          {% else %}
            <input required type="email" class="notify_email" name="contact[email]" id="contact[email]" placeholder="{{settings.variant_notify_email_placeholder}}" value="{{ contact.fields.email }}" />
          {% endif %}
 
          <input type="hidden" name="contact[body]" class="notify_form_message" data-body="{{ 'products.notify_form_variant.message_content' | t: product: product.title, url: canonical_url }}" value="{{ 'products.notify_form_variant.message_content' | t: product: product.title, url: canonical_url }}" />
          <input class="action_button btn" name="ftcnan" type="submit" value="{{settings.variant_notify_button}}" style="margin-bottom:0px" />    
        
    
    </p>
    
    <p class="checktext"><input type="checkbox" id="footercheckcontactnn"> {{ settings.termstext }} <a target="_blank" href="{{ settings.termstextlink }}">{{ settings.termslinktext }}</a></p>
                        <script>
$('body').on('click', '[name="ftcnan"]', function() {
   
  if ($('#footercheckcontactnn').is(':checked')) {
    $(this).submit();
   
  }
  else {
    alert("{{ settings.termstext_warning }}");
    return false;
  }
});
</script>
           
    
      {% endif %}
    {% endform %}
  </div>
 
   {% endif %}
<style>
 
  .notify_email {
  width: 300px;
    /* margin: 10px 0px; */
    float: left;
    padding: 0px 7px;
    height: 33px;
}
  
   .notify_form input.action_button.btn {
    height: 33px!important;
}
</style>
 